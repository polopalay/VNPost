@using VNPost.Models.ViewModels
@using VNPost.Models.Entity;
@model LeftVM
<link rel="stylesheet" href="~/css/component/left.css" />
<section id="article-left">
    <i class="fas fa-bars" id="columnist-hamburger"></i>
    <div class="left" id="columnist-bar">
        <article>
            <h2>CHUYÊN MỤC</h2>
            <ul>
                @foreach (Columnist father in Model.Columnists.Where(c => c.FatherId == 0))
                {
                    <li class="fas fa-angle-double-right">
                        <a href="/Posts/Article/ListColumnist?columnistId=@(father.Id)"
                           class="@(Model.FatherId==father.Id?"current":"")">
                            @father.Name
                        </a>
                        <ul>
                            @foreach (Columnist son in Model.Columnists.Where(c => c.FatherId == father.Id))
                            {
                                <li class="fas fa-angle-right">
                                    <a href="/Posts/Article/ListColumnist?columnistItemId=@(son.Id)"
                                       class="@(Model.SonId==son.Id?"current":"")">
                                        @son.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                    @*@if (Model.Columnists.Where(cli => cli.FatherId == columnist.Id).ToList().Count > 1)
                        {
                            <li class="fas fa-angle-double-right">
                                <a href="/Posts/Article/ListColumnist?columnistId=@(columnist.Id)"
                                   class="@(Model.FatherId==columnist.Id?"current":"")">
                                    @columnist.Name
                                </a>
                                <ul>
                                    @foreach (Columnist columnistItem in Model.Columnists.Where(cli => cli.FatherId == columnist.Id))
                                    {
                                        <li class="fas fa-angle-right">
                                            <a href="/Posts/Article/ListColumnist?columnistItemId=@(columnistItem.Id)"
                                               class="@(Model.SonId==columnistItem.Id?"current":"")">
                                                @columnistItem.Name
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="fas fa-angle-double-right">
                                <a href="/Posts/Article/ListColumnist?columnistItemId=@(Model.Columnists.Where(cli => cli.FatherId == columnist.Id).ToList()[0].Id)"
                                   class="@((Model.FatherId==columnist.Id||Model.SonId==Model.Columnists.Where(cli => cli.FatherId == columnist.Id).ToList()[0].Id)?"current":"")"
                                   style="line-height:3rem;">
                                    @columnist.Name
                                </a>
                            </li>
                        }*@
                }
            </ul>
        </article>
        <div>
            <p>Đường dây nóng hỗ trợ</p>
            <h1>1900 54 54 81</h1>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script>$("#columnist-hamburger").click(clickBtn);
    function clickBtn() {
        if ($("#columnist-bar").css("display") === "none") {
            $("#columnist-bar").css("display", "block")
        } else {
            $("#columnist-bar").css("display", "none")
        }
    } window.onresize = function () {
        if (window.innerWidth >= 1202) {
            $("#columnist-bar").css("display", "block")
        } else {
            $("#columnist-bar").css("display", "none")
        }
    };</script>