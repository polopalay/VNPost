@using VNPost.Models.ViewModels;
@using VNPost.Models.Entity;
@model FooterVM
<link rel="stylesheet" href="~/css/component/footer.css" />
<div class="footer-top">
    <div class="container d-flex justify-content-between">
        @foreach (Category category in Model.Categories)
        {
            <div>
                <p>@category.Name</p>
                <ul>
                    @foreach (Post post in Model.Posts.Where(p => p.CategoryId == category.Id))
                    {
                        <li class="fas fa-caret-right"><a href="/Posts/Service/ServiceDetail/@(post.Id)">@post.Title</a></li>
                    }
                </ul>
            </div>
        }
    </div>
</div>
