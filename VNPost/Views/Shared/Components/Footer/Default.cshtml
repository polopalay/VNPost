@using VNPost.Models.ViewModels;
@using VNPost.Models.Entity;
@model FooterVM
<link rel="stylesheet" href="~/css/component/footer.css" />
<div class="footer-top">
    @foreach (Category category in Model.Categories)
    {
        <div>
            <p>@category.Name</p>
            <ul>
                @foreach (Post post in Model.Posts.Where(p => p.GalleryId == category.Id))
                {
                    <li class="fas fa-caret-right"><a href="/Posts/Service/ServiceDetail/@(post.Id)">@post.Title</a></li>
                }
            </ul>
        </div>
    }
</div>
<div class="footer-bottom">
    <div>
        <h4>@Model.ListMenuItem["Company"]</h4>
        <p>@Model.ListMenuItem["Location"]</p>
        <p>@Model.ListMenuItem["Policy"]</p>
    </div>
    <div>
        <ul>
            @foreach (MenuLink link in Model.Links)
            {
                <li><a href="@link.Link"><i class="@link.Value"></i></a></li>
            }
        </ul>
    </div>
</div>
<a href="" class="contact" id="contact">
    <i class="fas fa-comment-dots"></i>
    <p>Hỗ trợ trực tuyến</p>
</a>
<div id="mss">
    <div id="mss-tool-bar">
        <svg focusable="false" aria-hidden="true" data-key="contract_alt" viewBox="0 0 100 100" class="icon">
            <path d="M56.923 45.962h29.615c1.924 0 2.5-2.116.962-3.654l-9.423-9.616 17.308-17.5c.96-.96.96-2.692 0-3.654L88.27 4.423c-.962-.77-2.5-.77-3.655.192L67.308 21.923 57.5 12.5c-1.538-1.538-3.654-.962-3.654.962v29.615c0 1.346 1.73 2.885 3.077 2.885zm-13.846 7.884H13.462c-1.924 0-2.5 2.116-.962 3.654l9.423 9.615-17.308 17.5c-.96.962-.96 2.693 0 3.654l7.116 7.115c.962.96 2.5.96 3.655 0l17.5-17.5 9.807 9.423c1.346 1.73 3.462 1.154 3.462-.77V57.115c0-1.346-1.73-3.27-3.077-3.27z"></path>
        </svg>
        <p>Trò Chuyện</p>
        <svg focusable="false" aria-hidden="true" data-key="close" viewBox="0 0 100 100" class="icon" id="mss-close">
            <path d="M65.577 53.73l27.5-27.71c1.27-1.27 1.27-3.174 0-4.445l-4.23-4.44c-1.272-1.27-3.175-1.27-4.445 0L56.694 44.847c-.847.845-2.115.845-2.96 0L26.018 16.922c-1.27-1.27-3.174-1.27-4.445 0l-4.44 4.442c-1.27 1.27-1.27 3.174 0 4.444l27.71 27.71c.846.846.846 2.116 0 2.962L16.923 84.403c-1.27 1.27-1.27 3.174 0 4.444l4.442 4.442c1.27 1.268 3.174 1.268 4.444 0l27.71-27.713c.846-.847 2.116-.847 2.962 0L84.19 93.29c1.27 1.268 3.174 1.268 4.445 0l4.44-4.445c1.27-1.268 1.27-3.17 0-4.44l-27.5-27.712c-.847-.847-.847-2.115 0-2.96z"></path>
        </svg>
    </div>
    <form>
        <div id="firstname">
            <p class="require">
                Tên Gọi
            </p>
            <input />
        </div>
        <div id="lastname">
            <p class="require">
                Tên Họ
            </p>
            <input />
        </div>
        <div id="gender">
            Giới tính
            <select>
                <option>Không có</option>
                <option>Nam</option>
                <option>Nữ</option>
                <option>Khác</option>
            </select>
        </div>
        <div id="phone">
            <p class="require">
                Điện thoại
            </p>
            <input />
        </div>
        <div id="email">
            <p>Email</p>
            <input />
        </div>
        <div id="theme">
            <p class="require">
                Chủ Đề
            </p>
            <input />
        </div>
        <div id="grid-btn">
            <button type="submit">Bắt Đầu Trò Truyện</button>
        </div>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="~/js/component/footer.js"></script>