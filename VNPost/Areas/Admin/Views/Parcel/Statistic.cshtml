@{
    ViewData["Title"] = "Privacy Policy";
}
@section Styles{
}
@model int

<div class="container my-4">
    <div class="container my-4">
        <div class="row">
            <div class="col mb-2">
                <h2 class="text-dark">Danh sách các vùng</h2>
            </div>
            <div class="col text-end">
                <a href='/Admin/Parcel/Upsert/0' class="btn btn-success mb-2"> Thêm mới </a>
                <a class="btn btn-warning mb-2" href="/Admin/Home"><i class="fas fa-home"></i> Về trang chủ</a>
            </div>
        </div>
        <table class="table" width="100%" id="tblData">
            <thead>
                <tr>
                    <th> Month </th>
                    <th> Year </th>
                    <th> Total </th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script>let table;

        function loadTbl() {
            table = $('#tblData').DataTable({
                buttons: [
                    'excel'
                ],
                "ajax": {
                    type: "GET",
                    url: "/api/parcel/statistic",
                },
                "columns": [
                    { "data": "month", "width": "33%" },
                    { "data": "year", "width": "33%" },
                    { "data": "price", "width": "33%" },
                ]
            });
        }
        loadTbl();</script>
}

