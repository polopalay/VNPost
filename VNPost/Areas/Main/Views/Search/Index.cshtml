@{
    ViewData["Title"] = "Privacy Policy";
}
@model VNPost.Models.ViewModels.ParcelViewModel
<div class="container">

    <div class="d-flex justify-content-center row m-5">
        <div class=" col-4">
            <form action="/Main/Search" class="row" id="form">
                <div class="col-10">
                    <label for="input" class="visually-hidden">Password</label>
                    <input type="text" name="id" class="form-control" placeholder="Enter Id" required>
                </div>
                <div class="col-2">
                    <button type="submit" class="btn btn-primary mb-3"><i class="fas fa-search"></i></button>
                </div>
            </form>
        </div>
    </div>
    @if (Model.Id != 0)
    {
        <div class="justify-content-center row m-5" id="result">
            <div class=" col-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Thông tin gói hàng</h5>
                        <h6 class="card-subtitle mb-2 text-muted" id="customerInfo">@Model.CustomerInfo</h6>
                        <p class="card-subtitle mb-2 text-muted" id="otherInfo">@Model.OtherInfo</p>
                        <p class="card-subtitle mb-2 text-muted" id="location">@Model.Location</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item" id="items">@Model.Items</li>
                        <li class="list-group-item" id="pointAway">Điểm đi: @Model.PointAway</li>
                        <li class="list-group-item" id="destination">Điểm đến: @Model.Destination</li>
                        <li class="list-group-item" id="status">Trạng thái: @Model.Status</li>
                    </ul>
                </div>
            </div>
        </div>
    }

</div>
@section Scripts{
    <script>
    if (@Model.Id == 0) {
        swal('Không tìm thấy')
    }
    </script>
}

