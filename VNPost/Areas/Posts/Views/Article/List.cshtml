@{
    ViewData["Title"] = "Dịch vụ";
}
@using VNPost.Models.ViewModels;
@using VNPost.Models.Entity;
@model ListArticleVM;

<link rel="stylesheet" href="~/css/post/article/list.css" />

<section id="article">
    <div class="left">
        <article>
            <h2>CHUYÊN MỤC</h2>
            <ul>
                @foreach (Columnist columnist in Model.Columnist)
                {
                    <li class="fas fa-angle-double-right">
                        <a href="">@columnist.Name</a>
                        <ul>
                            @foreach (ColumnistItem columnistItem in Model.ColumnistItem.Where(cli => cli.ColumnistId == columnist.Id))
                            {
                                <li class="fas fa-angle-right"><a href="">@columnistItem.Name</a></li>
                            }
                        </ul>
                    </li>
                }
            </ul>
        </article>
        <div>
            <p>@Model.ListMenuItem["PhoneText"]</p>
            <h1>@Model.ListMenuItem["PhoneNumber"]</h1>
        </div>
    </div>
    <div class="right">
        @foreach (Columnist columnist in Model.Columnist)
        {
            <div>
                <a href="">@columnist.Name</a>
                <ul>
                    @foreach (ColumnistItem columnistItem in Model.ColumnistItem.Where(cli => cli.ColumnistId == columnist.Id))
                    {
                        <li><a href="">@columnistItem.Name</a></li>
                    }
                </ul>
            </div>
            @foreach (Article article in Model.Articles.Where(a => a.ColumnistItem.ColumnistId == columnist.Id))
            {
                <article>
                    <h3>@article.Title</h3>
                    <img src="@article.DescriptionImg" />
                    <p>@article.Description</p>
                </article>
            }
        }
    </div>
</section>
